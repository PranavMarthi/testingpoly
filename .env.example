# ── Database ──────────────────────────────────────────────────────────
PG_HOST=localhost
PG_PORT=5432
PG_USER=polymarket
PG_PASSWORD=polymarket
PG_DATABASE=polymarket_geo
PG_POOL_MIN=2
PG_POOL_MAX=10

# ── Polymarket API ────────────────────────────────────────────────────
POLYMARKET_API_URL=https://gamma-api.polymarket.com
POLYMARKET_PAGE_SIZE=100
POLYMARKET_MAX_PAGES=50
POLYMARKET_TIMEOUT=30
POLYMARKET_RATE_LIMIT=5.0

# ── Geocoding ─────────────────────────────────────────────────────────
GEOCODER_PROVIDER=nominatim
NOMINATIM_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=polymarket-geo-pipeline/1.0
# Uncomment for Google geocoding:
# GEOCODER_PROVIDER=google
# GOOGLE_GEOCODING_KEY=your-google-api-key
GEOCODER_RATE_LIMIT=1.0
GEOCODER_MAX_RETRIES=3
GEOCODER_BACKOFF_BASE=2.0
GEOCODER_CACHE_TTL_DAYS=30

# ── Inference ─────────────────────────────────────────────────────────
SPACY_MODEL=en_core_web_sm
INFER_MIN_CONFIDENCE=0.15
INFER_MAX_CANDIDATES=5
# Bump this when inference logic changes to re-process all markets:
INFERENCE_VERSION=1

# ── LLM Fallback (optional) ──────────────────────────────────────────
LLM_ENABLED=false
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=

# ── Scheduler ─────────────────────────────────────────────────────────
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL_MIN=15
PIPELINE_BATCH_SIZE=500

# ── API Server ────────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_DEFAULT_RADIUS_KM=50.0
API_MAX_RADIUS_KM=500.0
API_MAX_RESULTS=100

# ── General ───────────────────────────────────────────────────────────
LOG_LEVEL=INFO
APP_ENV=development
